{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule":true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir":"./src"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}